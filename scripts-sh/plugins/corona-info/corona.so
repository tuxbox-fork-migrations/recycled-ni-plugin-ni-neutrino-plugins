if [ $command = "WGET" ]; then
	wget -O $countriesfile https://corona.lmao.ninja/v2/countries --no-check-certificate
	wget -O $worldfile https://corona.lmao.ninja/v2/all --no-check-certificate
else
	curl -k -o $countriesfile https://corona.lmao.ninja/v2/countries
	curl -k -o $worldfile https://corona.lmao.ninja/v2/all
fi 

if [ -e $countriesfile ]; then
	sed -i -e 's|,"country|\n{"country|g' $countriesfile
