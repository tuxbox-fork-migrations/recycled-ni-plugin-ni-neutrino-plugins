while :; do
	auswahl=3
	msgbox msg="$msgboxfile3" size="22" icon="$icon" title="$title $vinfo" select="Weltweit F~alle (WHO),Weltweit Tote (WHO),ZUR~UCK,DE-Karte (BMP),DE-F~alle (RKI),DE-F~alle p.T. (RKI),DE-Tote (RKI),DE-Tote p.T. (RKI),DE-Genesen (RKI),DE-Genesen p.T. (RKI),DE-Karte (ntv),DE-Karte (WHO)" order=4 default=$auswahl >/dev/null
