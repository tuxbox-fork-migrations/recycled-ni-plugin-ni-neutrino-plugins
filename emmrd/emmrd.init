#!/bin/sh

. /etc/init.d/globals

case $1 in
	start)
		if [ -e /var/etc/.emmrd ]; then
			SHOWINFO "starting ..."
			/bin/emmrd /var/tuxbox/config/doscam.cfg /var/etc/.card &
		fi
	;;
	stop)
		if [ -e /var/etc/.emmrd ]; then
			SHOWINFO "stopping ..."
			killall emmrd
		fi
	;;
	*)
		echo "[${BASENAME}] Usage: $0 {start|stop}"
	;;
esac
